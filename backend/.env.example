# Database Configuration
DATABASE_URL=sqlite:///./data/ntm_trading.db

# API Keys
COINGECKO_API_KEY=your_coingecko_api_key_here
MCP_SERVER_URL=http://localhost:8000

# Analytics Configuration
# Baseline for analytics tracking (default: 51)
WAITLIST_ANALYTICS_BASELINE=51

# Growth factor for analytics enhancement (default: 1.2 registrations per hour)
WAITLIST_GROWTH_FACTOR=1.2

# Email Configuration (optional)
EMAIL_BACKEND=console
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Feature Flags
ENABLE_WAITLIST=true
ENABLE_ANALYTICS=true
ENABLE_REFERRALS=true
