# AgentChain.Trade Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# AI/ML Configuration
# ================================
GROQ_API_KEY=your_groq_api_key_here
MODEL_DRAFT=openai/gpt-oss-120b

# ================================
# Database Configuration
# ================================
DATABASE_URL=sqlite:///./data/ntm_trading.db

# ================================
# API Keys
# ================================
COINGECKO_API_KEY=your_coingecko_api_key_here

# ================================
# Blockchain Configuration
# ================================
# Avalanche Mainnet
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
AVALANCHE_CHAIN_ID=43114

# Avalanche Fuji Testnet
FUJI_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
FUJI_CHAIN_ID=43113

# ================================
# Microservice Configuration
# ================================
MICROSERVICE_URL=http://localhost:3002
MICROSERVICE_API_KEY=your_microservice_api_key_here

# ================================
# Application Configuration
# ================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# ================================
# Security
# ================================
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# ================================
# External Services
# ================================
MCP_SERVER_URL=http://localhost:3000
SEARCH_SCRAPE_API_KEY=your_search_scrape_api_key_here

# ================================
# Monitoring
# ================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=change_this_password
